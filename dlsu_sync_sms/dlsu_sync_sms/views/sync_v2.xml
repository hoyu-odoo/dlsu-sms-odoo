			<field name="res_model">product.account.check.wizard</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<record id="sync_sms_settings_tree" model="ir.ui.view">
			<field name="name">SMS Synchronization</field>
			<field name="model">sync.sms.settings</field>
			<field name="arch" type="xml">
				<tree string="Configure SMS Synchronization">
					<field name="name"/>
